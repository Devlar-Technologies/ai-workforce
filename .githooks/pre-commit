#!/bin/bash
# Pre-commit hook to enforce Devlar AI Workforce development practices

set -e

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ğŸ” Devlar AI Workforce - Pre-commit checks${NC}"

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Check if we're on qc branch (required for development)
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
if [ "$CURRENT_BRANCH" != "qc" ]; then
    echo -e "${RED}âŒ Error: Development must happen on 'qc' branch${NC}"
    echo -e "${YELLOW}ğŸ’¡ Switch to qc branch: git checkout qc${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Correct branch: $CURRENT_BRANCH${NC}"

# Check for documentation updates rule
DOCS_UPDATED=false
CODE_CHANGED=false

# Check if code files have been changed
if echo "$STAGED_FILES" | grep -E '\.(py|js|ts|yaml|yml)$' > /dev/null; then
    CODE_CHANGED=true
fi

# Check if docs have been updated
if echo "$STAGED_FILES" | grep -E '^docs/|\.md$|DEVELOPMENT\.md|README\.md' > /dev/null; then
    DOCS_UPDATED=true
fi

# Enforce documentation rule
if [ "$CODE_CHANGED" = true ] && [ "$DOCS_UPDATED" = false ]; then
    echo -e "${RED}âŒ Error: Code changes detected but no documentation updates${NC}"
    echo -e "${YELLOW}ğŸ“š Documentation Rule: All code changes must include documentation updates${NC}"
    echo -e "${YELLOW}ğŸ“ Update relevant files in docs/ or root documentation${NC}"
    echo -e "${YELLOW}ğŸ’¡ See DEVELOPMENT.md for documentation requirements${NC}"
    exit 1
fi

if [ "$CODE_CHANGED" = true ] && [ "$DOCS_UPDATED" = true ]; then
    echo -e "${GREEN}âœ… Documentation updated with code changes${NC}"
fi

# Check for commit message format
COMMIT_MSG_FILE=".git/COMMIT_EDITMSG"
if [ -f "$COMMIT_MSG_FILE" ]; then
    COMMIT_MSG=$(head -n 1 "$COMMIT_MSG_FILE")

    # Check if commit message follows format
    if ! echo "$COMMIT_MSG" | grep -E '^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{10,}' > /dev/null; then
        echo -e "${YELLOW}âš ï¸  Warning: Commit message doesn't follow conventional format${NC}"
        echo -e "${YELLOW}ğŸ’¡ Recommended format: type(scope): description${NC}"
        echo -e "${YELLOW}   Examples: feat(pods): add marketing pod${NC}"
        echo -e "${YELLOW}             docs(tools): update API reference${NC}"
    fi
fi

# Check Python files for basic syntax
if echo "$STAGED_FILES" | grep '\.py$' > /dev/null; then
    echo -e "${BLUE}ğŸ Checking Python syntax...${NC}"

    for file in $(echo "$STAGED_FILES" | grep '\.py$'); do
        if [ -f "$file" ]; then
            python -m py_compile "$file" 2>/dev/null || {
                echo -e "${RED}âŒ Python syntax error in: $file${NC}"
                exit 1
            }
        fi
    done

    echo -e "${GREEN}âœ… Python syntax checks passed${NC}"
fi

# Check for required directories and files
if [ "$CODE_CHANGED" = true ]; then
    # Ensure docs directory structure exists
    if [ ! -d "docs" ]; then
        echo -e "${YELLOW}âš ï¸  Creating docs directory structure...${NC}"
        mkdir -p docs/components/pods docs/tutorials docs/examples docs/deployment
    fi

    # Ensure DEVELOPMENT.md exists
    if [ ! -f "DEVELOPMENT.md" ]; then
        echo -e "${RED}âŒ Error: DEVELOPMENT.md not found${NC}"
        echo -e "${YELLOW}ğŸ’¡ This file contains critical development practices${NC}"
        exit 1
    fi
fi

# Validate YAML files
if echo "$STAGED_FILES" | grep '\.(yml|yaml)$' > /dev/null; then
    echo -e "${BLUE}ğŸ“„ Checking YAML syntax...${NC}"

    for file in $(echo "$STAGED_FILES" | grep '\.(yml|yaml)$'); do
        if [ -f "$file" ]; then
            python -c "import yaml; yaml.safe_load(open('$file'))" 2>/dev/null || {
                echo -e "${RED}âŒ YAML syntax error in: $file${NC}"
                exit 1
            }
        fi
    done

    echo -e "${GREEN}âœ… YAML syntax checks passed${NC}"
fi

# Check for emojis in public-facing documentation
echo -e "${BLUE}ğŸš« Checking for emojis in public-facing documentation...${NC}"

# Emoji pattern - matches most common emoji ranges
EMOJI_PATTERN='[\x{1F600}-\x{1F64F}]|[\x{1F300}-\x{1F5FF}]|[\x{1F680}-\x{1F6FF}]|[\x{1F1E0}-\x{1F1FF}]|[\x{2600}-\x{26FF}]|[\x{2700}-\x{27BF}]'

EMOJI_FOUND=false
AFFECTED_FILES=()

for file in $STAGED_FILES; do
    # Skip if file doesn't exist
    if [[ ! -f "$file" ]]; then
        continue
    fi

    # Check if file is public documentation
    IS_PUBLIC_DOC=false

    # Check exact matches
    if [[ "$file" == "README.md" ]] || [[ "$file" == "DEVELOPMENT.md" ]] || [[ "$file" == "architecture.md" ]]; then
        IS_PUBLIC_DOC=true
    fi

    # Check docs directory (exclude internal docs)
    if [[ "$file" =~ ^docs/.*\.md$ ]] && [[ ! "$file" =~ ^docs/internal/ ]]; then
        IS_PUBLIC_DOC=true
    fi

    if [[ "$IS_PUBLIC_DOC" == true ]]; then
        # Check for emojis using perl regex
        if ! perl -ne "exit 1 if /$EMOJI_PATTERN/u" "$file" 2>/dev/null; then
            EMOJI_FOUND=true
            AFFECTED_FILES+=("$file")
        fi
    fi
done

if [[ "$EMOJI_FOUND" == true ]]; then
    echo -e "${RED}âŒ COMMIT REJECTED: Emojis found in public-facing documentation!${NC}"
    echo -e "${YELLOW}ğŸ“ Public-facing documentation must be professional and emoji-free.${NC}"
    echo -e "${YELLOW}Files with emojis:${NC}"

    for file in "${AFFECTED_FILES[@]}"; do
        echo -e "${YELLOW}  â€¢ $file${NC}"
        # Show specific lines with emojis
        perl -ne "print \"    Line $.: $_\" if /$EMOJI_PATTERN/u" "$file" 2>/dev/null || true
    done

    echo ""
    echo -e "${GREEN}ğŸ’¡ Fix by replacing emojis with:${NC}"
    echo "  â€¢ Descriptive text"
    echo "  â€¢ Bold/italic formatting"
    echo "  â€¢ Status badges"
    echo ""
    echo -e "${GREEN}â„¹ï¸  Note: Internal docs (docs/internal/) are exempt${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… No emojis found in public-facing documentation${NC}"

# Check for secrets in staged files
echo -e "${BLUE}ğŸ”’ Checking for secrets...${NC}"

SECRET_PATTERNS=(
    "api_key\s*=\s*['\"][^'\"]*['\"]"
    "password\s*=\s*['\"][^'\"]*['\"]"
    "token\s*=\s*['\"][^'\"]*['\"]"
    "secret\s*=\s*['\"][^'\"]*['\"]"
    "sk-[a-zA-Z0-9]+"
    "pk_live_[a-zA-Z0-9]+"
)

for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        for pattern in "${SECRET_PATTERNS[@]}"; do
            if grep -iE "$pattern" "$file" > /dev/null; then
                echo -e "${RED}âŒ Potential secret found in: $file${NC}"
                echo -e "${YELLOW}ğŸ’¡ Use environment variables or .env files instead${NC}"
                exit 1
            fi
        done
    fi
done

echo -e "${GREEN}âœ… No secrets detected${NC}"

# Display workflow reminder
echo -e "${BLUE}ğŸ“‹ Workflow Reminder:${NC}"
echo -e "${YELLOW}1. Work on qc branch âœ…${NC}"
echo -e "${YELLOW}2. Update documentation âœ…${NC}"
echo -e "${YELLOW}3. Commit on qc${NC}"
echo -e "${YELLOW}4. Switch to main â†’ merge â†’ push â†’ switch back to qc${NC}"

echo -e "${GREEN}ğŸ‰ All pre-commit checks passed!${NC}"